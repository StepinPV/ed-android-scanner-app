<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_product_section"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="24sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="203dp">

            <ImageView
                android:id="@+id/activity_product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="description"
                android:src="@android:drawable/ic_menu_help" />

            <ImageView
                android:id="@+id/activity_product_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.9"
                android:background="#fff"
                android:contentDescription="description"
                android:visibility="gone" />

            <com.cunoraz.gifview.library.GifView
                android:id="@+id/activity_product_success"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:gif="@drawable/success3" />

            <ImageView
                android:id="@+id/activity_product_error"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/error"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/activity_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/activity_product_manufacturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/activity_product_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#000"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textSize="18sp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>